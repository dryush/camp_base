  <h1>Список регионов</h1>

  <table class = "table">
    <thead>
      <tr>
        <th>Страна</th>
        <th>Регион</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @regions.each do |region| %>
        <tr>
          <td><%= region.country.name %></td>
          <td><%= region.name %></td>
          <td><%= link_to 'Подробнее', region %></td>
          <td><%= link_to 'Редактировать', edit_region_path(region) %></td>
          <td><%= link_to 'Удалить', region, method: :delete, data: { confirm: "Вы уверены?
Удаление данной записи повлечёт за собой удаление всех связанных записей ( турбаз)" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

